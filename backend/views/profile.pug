extends layout.pug 

block content
  style. 
    .splide__arrow--prev {
      left: -50px;
    }
    .splide__arrow--next {
      right: -50px;
    }
    .splide__pagination {
      bottom: -20px;
    }
    button.is-active {
      background-color: black !important;
    }
  if building.length > 0
    h1 #{building[0].name}
    .container 
      .row 
        .col-6
          if building.length > 1
            section.splide(aria-label='Splide Basic HTML Example')
              .splide__track
                ul.splide__list
                  each image in building
                    li.splide__slide.d-flex.justify-content-center
                      img(src=image.url, style='max-height: 500px; max-width:100%')
          else 
            .d-flex.justify-content-center
              img(src=building[0].url, style='max-height: 500px; max-width:100%')
  else 
    h1 Not found.
  
