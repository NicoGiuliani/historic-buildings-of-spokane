style. 
  #mainNav {
    height: 12vh;
  }
  #mainFooter {
    height: 6vh;
  }
  @media screen and (max-width: 992px) {
    * {
      font-size: 1.4rem !important;
    }
    #mainNav {
      height: initial;
    }
    #mainFooter {
      height: 4vh;
    }
  }
  /* Hide the default scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }
  /* Track (the area behind the thumb) */
  ::-webkit-scrollbar-track {
    background: transparent; /* You can set a background color here if desired */
  }
  /* Thumb (the draggable part) */
  ::-webkit-scrollbar-thumb {
    background: #888; /* Color of the thumb */
  }
  /* Handle the corner where two scrollbars meet */
  ::-webkit-scrollbar-corner {
    background: transparent;
  }
  /* Resize the content to accommodate the scrollbar width */
  body {
    margin-right: 12px; /* Width of the scrollbar */
    overflow-y: auto; /* Always show scrollbar */
  }

